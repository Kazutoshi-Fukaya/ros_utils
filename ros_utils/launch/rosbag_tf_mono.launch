<?xml version="1.0"?>
<launch>
    <arg name="publish_pose" default="false" />
    <arg name="pose_in_remap" default="amcl_pose" />
    <arg name="odom_in_remap" default="odom" />
    <arg name="pose_out_remap" default="robot_pose" />
    <arg name="map_frame_id" default="map" />
    <arg name="base_link_frame_id" default="base_link" />
    <arg name="laser_frame_id" default="laser" />
    <arg name="camera_frame_id" default="camera" />

    <!-- rosbag_tf_node -->
    <node pkg="tf_utils" type="rosbag_tf_node" name="rosbag_tf" >
        <!-- remap -->
        <remap from="pose_in"  to="$(arg pose_in_remap)" />
        <remap from="odom_in"  to="$(arg odom_in_remap)" />
        <remap from="pose_out" to="$(arg pose_out_remap)" />

        <!-- params -->
        <param name="PUBLISH_POSE"       value="$(arg publish_pose)" />
        <param name="MAP_FRAME_ID"       value="$(arg map_frame_id)" />
        <param name="BASE_LINK_FRAME_ID" value="$(arg base_link_frame_id)" />
        <param name="LASER_FRAME_ID"     value="$(arg laser_frame_id)" />
        <param name="CAMERA_FRAME_ID"    value="$(arg camera_frame_id)" />

        <rosparam command="load" file="$(find tf_utils)/config/params/rosbag_tf.yaml" />
    </node>

</launch>
